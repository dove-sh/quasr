{
  "compilerOptions": {
    "module": "ES2022",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build/",
    "lib": [ "es2022" ],
    "sourceMap": true,
    "allowJs": true, 
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
   
  "include": ["src/**/*", "src/*"],
}